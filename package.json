{
  "name": "typescript-boilerplate",
  "version": "0.0.1",
  "description": "typescript boilerplate",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild:dev": "npm run clean",
    "build:dev": "webpack",
    "prebuild:prod": "npm run clean",
    "build:prod": "webpack --progress -p --mode=production",
    "build": "npm run build:prod",
    "watch": "webpack --watch --mode=development",
    "server": "wait-on dist/server/main.js && nodemon dist/server/main.js -w dist/server/main.js",
    "prestart": "npm run clean",
    "start": "npm-run-all --parallel watch server",
    "start:prod": "npm-run-all --parallel build:prod server",
    "deploy": "surge --project ./dist/public --domain https://examplesite.surge.sh",
    "undeploy": "surge teardown --domain https://examplesite.surge.sh",
    "ci": "npm run build:dev && npm run build:prod"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/core": "7.9.0",
    "@babel/runtime": "7.8.4",
    "@loadable/component": "5.12.0",
    "@loadable/server": "5.12.0",
    "@types/react": "16.9.23",
    "@types/react-dom": "16.9.5",
    "@types/react-router-dom": "5.1.3",
    "core-js": "3.6.4",
    "fastify": "2.12.0",
    "fastify-compress": "2.0.1",
    "fastify-etag": "0.1.0",
    "fastify-static": "2.6.0",
    "hyperid": "2.0.3",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-helmet": "5.2.1",
    "react-router-dom": "5.1.2",
    "tslib": "1.11.1"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-runtime": "7.8.3",
    "@babel/preset-env": "7.8.4",
    "@babel/preset-react": "7.8.3",
    "@loadable/babel-plugin": "5.12.0",
    "@loadable/webpack-plugin": "5.12.0",
    "babel-loader": "8.0.6",
    "copy-webpack-plugin": "5.1.1",
    "css-loader": "3.4.2",
    "file-loader": "5.1.0",
    "json-loader": "0.5.7",
    "mini-css-extract-plugin": "0.9.0",
    "nodemon": "2.0.2",
    "npm-run-all": "4.1.5",
    "offline-plugin": "5.0.7",
    "raw-loader": "4.0.0",
    "rimraf": "3.0.2",
    "source-map-loader": "0.2.4",
    "stylelint": "13.2.0",
    "surge": "0.21.3",
    "ts-loader": "6.2.1",
    "tslint": "6.0.0",
    "tslint-loader": "3.5.4",
    "tslint-react": "4.2.0",
    "typescript": "3.7.5",
    "wait-on": "4.0.1",
    "webpack": "4.41.6",
    "webpack-bundle-analyzer": "3.6.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3",
    "webpack-manifest-plugin": "2.2.0",
    "webpack-merge": "4.2.2",
    "webpack-node-externals": "1.7.2"
  }
}

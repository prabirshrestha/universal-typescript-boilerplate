{
  "name": "typescript-boilerplate",
  "version": "0.0.1",
  "description": "typescript boilerplate",
  "scripts": {
    "clean": "rimraf build",
    "prebuild:dev": "npm run clean",
    "build:dev": "webpack",
    "prebuild:prod": "npm run clean",
    "build:prod": "webpack --progress -p",
    "build": "npm run build:prod",
    "watch": "webpack --watch",
    "server": "wait-on build/server.js && nodemon build/server.js -w build/server.js",
    "prestart": "npm run clean",
    "start": "npm-run-all --parallel watch server",
    "deploy": "surge --project ./build/public --domain https://examplesite.surge.sh",
    "undeploy": "surge teardown --domain https://examplesite.surge.sh"
  },
  "license": "MIT",
  "dependencies": {
    "awesome-typescript-loader": "^3.2.1",
    "es6-promise": "^4.1.1",
    "express": "^4.15.3",
    "isomorphic-fetch": "^2.2.1",
    "tslib": "^1.7.1"
  },
  "devDependencies": {
    "@types/es6-promise": "0.0.32",
    "@types/express": "^4.0.36",
    "@types/isomorphic-fetch": "0.0.34",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "isomorphic-style-loader": "^3.0.0",
    "json-loader": "^0.5.4",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "postcss-assets": "^4.2.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-loader": "^2.0.6",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "stylelint": "^8.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "surge": "^0.19.0",
    "tslint": "^5.5.0",
    "tslint-loader": "^3.5.3",
    "tslint-react": "^3.0.0",
    "typescript": "^2.4.2",
    "wait-on": "^2.0.2",
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.5.1",
    "webpack-manifest-plugin": "^1.2.1",
    "webpack-merge": "^4.1.0"
  }
}

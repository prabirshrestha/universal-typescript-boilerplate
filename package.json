{
  "name": "typescript-boilerplate",
  "version": "0.0.1",
  "description": "typescript boilerplate",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild:dev": "npm run clean",
    "build:dev": "webpack",
    "prebuild:prod": "npm run clean",
    "build:prod": "webpack --progress -p --mode=production",
    "build": "npm run build:prod",
    "watch": "webpack --watch --mode=development",
    "server": "wait-on dist/server/main.js && nodemon dist/server/main.js -w dist/server/main.js",
    "prestart": "npm run clean",
    "start": "npm-run-all --parallel watch server",
    "deploy": "surge --project ./dist/public --domain https://examplesite.surge.sh",
    "undeploy": "surge teardown --domain https://examplesite.surge.sh",
    "ci": "npm run build:dev && npm run build:prod"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/core": "7.5.5",
    "@babel/runtime": "7.5.5",
    "@loadable/component": "5.10.2",
    "@loadable/server": "5.10.2",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "@types/react-router-dom": "4.3.5",
    "core-js": "3.2.1",
    "fastify": "2.7.1",
    "fastify-compress": "0.11.0",
    "fastify-static": "2.5.0",
    "hyperid": "2.0.2",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-router-dom": "5.0.1",
    "tslib": "1.10.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-transform-runtime": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-react": "7.0.0",
    "@loadable/babel-plugin": "5.10.0",
    "@loadable/webpack-plugin": "5.7.1",
    "babel-loader": "8.0.6",
    "copy-webpack-plugin": "5.0.4",
    "file-loader": "4.2.0",
    "json-loader": "0.5.7",
    "nodemon": "1.19.1",
    "npm-run-all": "4.1.5",
    "raw-loader": "3.1.0",
    "rimraf": "3.0.0",
    "source-map-loader": "0.2.4",
    "stylelint": "10.1.0",
    "stylelint-webpack-plugin": "0.10.5",
    "surge": "0.21.3",
    "ts-loader": "6.0.4",
    "tslint": "5.19.0",
    "tslint-loader": "3.5.4",
    "tslint-react": "4.0.0",
    "typescript": "3.5.3",
    "wait-on": "3.3.0",
    "webpack": "4.39.2",
    "webpack-bundle-analyzer": "3.4.1",
    "webpack-cli": "3.3.7",
    "webpack-dev-server": "3.8.0",
    "webpack-manifest-plugin": "2.0.4",
    "webpack-merge": "4.2.2",
    "webpack-node-externals": "1.7.2",
    "workbox-webpack-plugin": "4.3.1"
  }
}

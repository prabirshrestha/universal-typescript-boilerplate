{
  "name": "typescript-boilerplate",
  "version": "0.0.1",
  "description": "typescript boilerplate",
  "scripts": {
    "clean": "rimraf dist",
    "watch": "webpack --watch",
    "prebuild": "npm run clean",
    "build": "webpack",
    "build:prod": "webpack --progress -p",
    "prestart": "npm run build",
    "server": "nodemon dist/server/index.js",
    "start": "npm-run-all --parallel server watch",
    "predebug": "npm run build",
    "debug": "node --debug-brk dist/server/index.js"
  },
  "license": "MIT",
  "dependencies": {
    "es6-promise": "^3.2.1",
    "express": "^4.14.0",
    "isomorphic-fetch": "^2.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.0.32",
    "@types/node": "^6.0.38",
    "nodemon": "^1.10.2",
    "npm-run-all": "^3.1.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.4",
    "source-map-loader": "^0.1.5",
    "ts-loader": "^0.8.2",
    "typescript": "^2.0.2",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.1",
    "webpack-merge": "^0.14.1"
  }
}

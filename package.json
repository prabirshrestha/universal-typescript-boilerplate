{
  "name": "typescript-boilerplate",
  "version": "0.0.1",
  "description": "typescript boilerplate",
  "scripts": {
    "clean": "rimraf build",
    "prebuild:dev": "npm run clean",
    "build:dev": "webpack",
    "prebuild:prod": "npm run clean",
    "build:prod": "webpack --progress -p --mode=production",
    "build": "npm run build:prod",
    "watch": "webpack --watch --mode=development",
    "server": "wait-on build/server/index.js && nodemon build/server/index.js -w build/server/index.js",
    "prestart": "npm run clean",
    "start": "npm-run-all --parallel watch server",
    "deploy": "surge --project ./build/public --domain https://examplesite.surge.sh",
    "undeploy": "surge teardown --domain https://examplesite.surge.sh",
    "ci": "npm run build:dev && npm run build:prod"
  },
  "license": "MIT",
  "dependencies": {
    "es6-promise": "4.2.8",
    "isomorphic-unfetch": "3.0.0",
    "koa": "2.8.1",
    "koa-compress": "3.0.0",
    "koa-router": "7.4.0",
    "koa-static": "5.0.0",
    "tslib": "1.10.0"
  },
  "devDependencies": {
    "@types/koa": "2.0.49",
    "@types/koa-compress": "2.0.9",
    "@types/koa-router": "7.0.42",
    "@types/koa-static": "4.0.1",
    "awesome-typescript-loader": "3.3.0",
    "copy-webpack-plugin": "5.0.4",
    "file-loader": "4.2.0",
    "json-loader": "0.5.7",
    "nodemon": "1.19.1",
    "npm-run-all": "4.1.5",
    "raw-loader": "3.1.0",
    "rimraf": "3.0.0",
    "source-map-loader": "0.2.4",
    "stylelint": "10.1.0",
    "stylelint-webpack-plugin": "0.10.5",
    "surge": "0.21.3",
    "tslint": "5.19.0",
    "tslint-loader": "3.5.4",
    "tslint-react": "4.0.0",
    "typescript": "3.5.3",
    "wait-on": "3.3.0",
    "webpack": "4.39.2",
    "webpack-cli": "3.3.7",
    "webpack-dev-server": "3.8.0",
    "webpack-manifest-plugin": "2.0.4",
    "webpack-merge": "4.2.1"
  }
}
